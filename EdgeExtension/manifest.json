{
    "manifest_version": 3,
    "name": "Topdesk Secret Link Copier",
    "version": "1.0",
    "description": "Kopieert de geheime link naar het klembord in Topdesk",
    "permissions": [
      "clipboardWrite",
      "scripting"
    ],
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://gzazna.topdesk.net/*",
          "https://zas.topdesk.net/*"
        ],
        "js": ["content-script.js"]
      }
    ]
  }
  